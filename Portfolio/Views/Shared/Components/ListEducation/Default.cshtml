<script>
    @functions {
        string TurkishMonthYear(DateTime date)
        {
            var turkishCulture = new CultureInfo("tr-TR");
            return $"{turkishCulture.DateTimeFormat.GetMonthName(date.Month)} {date.Year}";
        }
    }
</script>
