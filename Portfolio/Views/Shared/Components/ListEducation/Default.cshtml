        </div>
        @if (item == Model.First())
        {
            <div class="col-1" id="last">
                <div id="dot"></div>
                @if (item == Model.Last())
                {

                }
                else
                {
                    <div id="line"></div>
                }
            </div>
            <div class="col-sm-8">
                <b class="text-success">@item.Name</b>
                <br>
                <h6>@item.Department</h6>
            </div>
